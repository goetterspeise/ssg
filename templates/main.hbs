<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <meta name="description" content="{{recipe-name}}">
    <title>{{recipe-name}}</title>
    <!-- Css -->
    <link rel="stylesheet" type="text/css" href="css/pure-min.css">
    <link rel="stylesheet" type="text/css" href="css/grids-responsive-min.css">
    <!-- Photo Swype Css -->
    <link rel="stylesheet" type="text/css" href="css/photoswipe.css">
    <link rel="stylesheet" type="text/css" href="css/default-skin/default-skin.css">
    <!-- Font Awesome Css -->
    <link rel="stylesheet" type="text/css" href="css/font-awesome.min.css" />
    <!-- Fonts -->
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Merriweather:300,700,700italic,300italic|Open+Sans:700,400" />
    <!-- Site Css -->
    <link rel="stylesheet" type="text/css" href="css/site.css">
</head>
<body>

  <div class="pure-g">

      <!-- Header -->
      {{> header}}
      <!-- Header end -->

      <!-- Helper Grid for large Screensize -->
      <div class="pure-u-md-1-5"></div>

      <!-- Main -->
      <div class="pure-u-1 pure-u-md-3-5 main">

        <!-- upper Section -->

          <!-- Recipe name -->
          <div class="pure-u-1 pure-u-md-5-5 recipe-title">
              <h1>{{recipe-name}}</h1>
              <hr />
          </div>
          <!-- Recipe name end -->

          <div class="pure-u-1 pure-u-md-5-5 recipe-categories">
              {{#each categories}}
                  <span class="category">
                      <a href="#">{{this}}</a>
                  </span>
              {{/each}}
          </div>

          <!-- Main Recipe Pic -->
          <div class="pure-u-1 pure-u-md-2-5">
            <div class="pure-g">

              <div class="pure-u-1 pure-u-md-5-5">
                <div class="recipe-title-img effect2 gallery" itemscope itemtype="http://schema.org/ImageGallery">

                    <figure itemprop="associatedMedia" itemscope="" itemtype="http://schema.org/ImageObject">
                      <a href="{{recipe-image.src-full}}" itemprop="contentUrl" data-size="{{recipe-image.size}}">
                        <img class="effect2 pure-img" src="{{recipe-image.src-thmb}}" itemprop="thumbnail" alt="{{recipe-image.dsc}}" />
                      </a>
                      <figcaption itemprop="caption description">{{{recipe-image.dsc}}}</figcaption>
                    </figure>

                </div>
              </div>

            </div>
          </div>
          <!-- Main Recipe Pic end -->

          <div class="pure-u-1 pure-u-md-3-5">
          Infos
          </div>
        <!-- upper Section end-->

          <div class="pure-g recipe">
              <div class="pure-u-1 pure-u-md-2-5">
                  <h4 id="zutaten">Zutaten</h4>
                  <table class="pure-table">
                      {{#each ingredients as |value key|}}
                          <tr>
                              <td><span class="ingredient">{{value.ingredient}}</span></td>
                              <td>
                                  <span class="ammount">{{value.ammount}}</span>
                                  <span class="gauge">{{gauge}}</span>
                              </td>
                          </tr>
                      {{/each}}
                  </table>
              </div>
              <div class="pure-u-1 pure-u-md-3-5">
                  {{{contents}}}
              </div>
          </div>

          <!-- Gallery -->
          <div class="pure-u-1 pure-u-md-5-5 recipe-gallery">
            <h4>Weitere Bilder</h4>
          </div>

          <div class="pure-u-1 pure-u-md-5-5 recipe-gallery-content gallery">

            {{#each recipe-gallery as | image |}}
                <figure itemprop="associatedMedia" itemscope="" itemtype="http://schema.org/ImageObject">
                  <a href="{{image.src-full}}" itemprop="contentUrl" data-size="{{image.size}}">
                    <img class="gallery-img" src="{{image.src-thmb}}" itemprop="thumbnail" alt="{{image.dsc}}" />
                  </a>
                  <figcaption itemprop="caption description"><h4>{{{image.dsc}}}</h4></figcaption>
                </figure>
            {{/each}}

          </div>
          <!-- Gallery end -->

          <!-- Footer -->
          <div class="pure-u-1 recipe-footer">
              <a href="javascript:window.print()">
                  <i class="fa fa-print fa-2x recipe-icon" aria-hidden="true"></i>
              </a>
          </div>
          <!-- Footer end -->
      </div>
      <!-- end Main -->

      <!-- Helper Grid for large Screensize -->
      <div class="pure-u-md-1-5"></div>

  </div>

  <!-- Photoswipe root element -->
  {{> gallery }}
  <!-- Photoswipe root element end -->

  <!-- JS -->
  <script type="text/javascript" src="js/photoswipe.min.js"></script>
  <script type="text/javascript" src="js/photoswipe-ui-default.min.js"></script>
  <script type="text/javascript" src="js/pswp-init.js"></script>
  <script type="text/javascript">
    (function(window, document){
      var menu = document.getElementById('menu');
      var menuLink = document.getElementById('menuLink');

      menuLink.onclick = function(e) {
        console.log('push');
        e.preventDefault();

        var classes = menu.className.split(/\s+/);

        if(classes.indexOf('hidden') !== -1) {
          classes.splice(classes.indexOf('hidden'),1);
          menu.className = classes.join(' ');
          console.log(classes);
        } else if(classes.indexOf('hidden') === -1) {
          classes.push('hidden');
          menu.className = classes.join(' ');
          console.log(classes);
        }

      };
    })(this, this.document);
  </script>

</body>
</html>
